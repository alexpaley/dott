<div class="search">
  <input type="text" placeholder="Search">
</div>

<div class="message-list">
  {{#if message}}
    {{#each message}}
      <div class="indiv-message clearfix">
        <div class="author">
          <img src="{{message.author.picture}}">
          <h3>{{message.author.name}}</h3>
        </div>

        <div class="subject-sum">
          <h2>{{message.subject}}</h2>
          <p>{{message.body}}</p>
        </div>

        <div class="time">
          <i class="icon-paper-clip"></i>

          <div class="status">
          </div>

          <h4>{{message.time}}</h4>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>

<div class="full-message">
  {{#if message}}
    {{#each message}}
      <div class="top clearfix">
        <div class="author">
          <img src="{{message.author.picture}}">
          <h3>{{message.author.name}}</h3>
        </div>

        <div class="subject-sum">
          <h2>{{message.subject}}</h2>
          <h3>{{message.recipients}}</h3>
          <h4>{{message.time}}</h4>
        </div>

        <div class="actions">
          <i class="icon-reply"></i>
          <i class="icon-reply-all"></i>
          <i class="icon-trash"></i>
        </div>
      </div>

      <div class="message">
        {{message.body}}
      </div>

      <div class="past-message">
        <div class="indiv-message">
          <div class="author">
            <img src="{{message.past.author.picture}}">
            <h3>{{message.past.author.name}}</h3>
            <h4>{{message.past.author.time}}</h4>
          </div>

          <div class="message">
            {{message.past.message.body}}
          </div>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>
